<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="TextSignUp" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/green_500</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/green_500</item>
    </style>

    <style name="TextLogIn" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="EditTextStyle" parent="MatchWrap">
        <item name="android:background">@drawable/field_bg</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:cacheColorHint">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:layout_marginLeft">@dimen/dimen10</item>
        <item name="android:layout_marginRight">@dimen/dimen10</item>
        <item name="android:layout_marginTop">@dimen/dimen_5</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">50</item>
        <item name="android:longClickable">false</item>

    </style>

    <style name="RegistrationFieldsStyle" parent="EditTextStyle">
        <item name="mandatory">true</item>
    </style>

    <style name="HeaderLayoutStyle" parent="MatchWrap">
        <item name="android:background">@color/hint</item>
        <item name="android:padding">@dimen/dimen_10</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>


    <style name="HeaderTextStyle" parent="MatchWrap">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:cacheColorHint">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:layout_marginLeft">@dimen/dimen10</item>
        <item name="android:layout_marginRight">@dimen/dimen10</item>
        <item name="android:layout_marginTop">@dimen/dimen_5</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
